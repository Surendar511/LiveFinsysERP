<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#fff"
android:orientation="vertical"
tools:context=".frm_reel_issue_return">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:title="Reel Issue Return"
    app:titleTextColor="@color/white"
    android:background="#4BB543"
    android:layout_marginBottom="5dp"
    />

<LinearLayout
    android:id="@+id/btns"
    android:layout_below="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="end"
    android:background="#D3D3D3"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="3dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_new"
        android:text="NEW"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#337ab7"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginEnd="3dp"
        />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#337ab7"
        android:textColor="@color/white"
        android:layout_marginEnd="3dp"
        android:textStyle="bold"/>

    <Button
        android:visibility="gone"
        android:id="@+id/btn_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIST"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#337ab7"
        android:textColor="@color/white"
        android:layout_marginEnd="3dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#337ab7"
        android:textColor="@color/white"
        android:layout_marginEnd="3dp"
        android:textStyle="bold" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">

    <Button
        android:id="@+id/btn_scanjob"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Scan Job"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#4BB543"
        android:gravity="start"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="3dp"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/txt_job"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textColorHint="#808080"
        android:background="#F5F5F5"
        android:hint="@string/scanjob"
        android:textColor="@color/black"
        android:layout_weight="3"
        android:focusable="false"
        android:enabled="true"
        android:textIsSelectable="true"
        />
</LinearLayout>

<LinearLayout
    android:layout_below="@+id/btns"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">

    <Button
        android:id="@+id/btn_scanreel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Scan Reel"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#4BB543"
        android:gravity="start"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="3dp"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/txt_reel"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textColorHint="#808080"
        android:background="#F5F5F5"
        android:hint="@string/scanreel"
        android:textColor="@color/black"
        android:layout_weight="3"
        android:focusable="false"
        android:enabled="true"
        android:textIsSelectable="true"
        />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end">
    <EditText
        android:id="@+id/txt_barcode"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textColorHint="#808080"
        android:background="#F5F5F5"
        android:hint="Scan Barcode here"
        android:textColor="@color/black"
        android:layout_weight="2"
        />

    <Button
        android:id="@+id/btn_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read code"
        android:textAllCaps="false"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#337ab7"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>
</LinearLayout>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginBottom="3dp"
    android:background="@color/gray_platinum"
    android:orientation="vertical"></LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Item to List"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#337ab7"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/REJBorder"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginBottom="3dp"
    android:background="@color/gray_platinum"
    android:orientation="vertical"></LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:padding="5dp"
    android:background="@color/light_blue"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Del"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_weight="0.2"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sno"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_weight="0.2"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/grid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reels"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_weight="1.5"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qty"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_weight="0.5"
        android:textSize="20dp"/>


</LinearLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</LinearLayout>