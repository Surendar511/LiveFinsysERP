<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#38414D" android:endColor="#38414D" android:startColor="#38414D" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:centerColor="#5D5E6B" android:angle="270" android:endColor="#5D5E6B" android:startColor="#5D5E6B" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:centerColor="#38414D" android:angle="270" android:endColor="#38414D" android:startColor="#38414D" />
        </shape>
    </item>
</selector>