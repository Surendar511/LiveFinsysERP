<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:screenOrientation="landscape"
    tools:context=".frm_jobw_prod">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Job Wise Production"
        app:titleTextColor="@color/white"
        android:background="#4BB543"
        android:layout_marginBottom="5dp"
        />


    <LinearLayout
        android:id="@+id/btns"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:background="#D3D3D3"
        android:layout_marginEnd="3dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_new"
            android:text="NEW"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#337ab7"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="3dp"
            />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#337ab7"
            android:textColor="@color/white"
            android:layout_marginEnd="3dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#337ab7"
            android:textColor="@color/white"
            android:layout_marginEnd="3dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Time"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#337ab7"
            android:textColor="@color/white"
            android:layout_marginEnd="3dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btns"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/linear_fix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <Button
                        android:id="@+id/btn_scan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Scan Job Card"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="#4BB543"
                        android:gravity="start"
                        android:layout_marginEnd="7dp"
                        android:layout_marginStart="3dp"
                        android:textSize="18dp"
                        />
                    <EditText
                        android:id="@+id/txtscan_job"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textColorHint="#808080"
                        android:background="#F5F5F5"
                        android:hint="@string/jobno"
                        android:textColor="@color/black"
                        android:layout_weight="3"
                        android:focusable="false"
                        android:enabled="true"
                        android:textIsSelectable="true"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Process"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_marginEnd="7dp"
                        android:layout_marginStart="3dp"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/txtprocess"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:textColorHint="#808080"
                        android:background="#F5F5F5"
                        android:hint="@string/process"
                        android:textColor="@color/black"
                        android:layout_weight="3"
                        android:focusable="false"
                        android:enabled="true"
                        android:textIsSelectable="true"
                        />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Shift"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_marginEnd="7dp"
                        android:layout_marginStart="3dp"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/txtshift"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:textColorHint="#808080"
                        android:background="#F5F5F5"
                        android:hint="@string/shift"
                        android:textColor="@color/black"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:focusable="false"
                        android:enabled="true"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Machine"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_marginEnd="7dp"
                        android:layout_marginStart="3dp"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/txtmachine"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:textColorHint="#808080"
                        android:background="#F5F5F5"
                        android:hint="@string/machine"
                        android:textColor="@color/black"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:focusable="false"
                        android:enabled="true"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Item Name"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_marginEnd="7dp"
                        android:layout_marginStart="3dp"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/txtitem"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:textColorHint="#808080"
                        android:background="#F5F5F5"
                        android:hint="@string/item"
                        android:textColor="@color/black"
                        android:layout_weight="3"
                        android:focusable="false"
                        android:enabled="true"
                        android:textIsSelectable="true"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Incharge"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_marginEnd="7dp"
                        android:layout_marginStart="3dp"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/txtoperator"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:textColorHint="#808080"
                        android:background="#F5F5F5"
                        android:hint="@string/incharge"
                        android:textColor="@color/black"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:focusable="false"
                        android:enabled="true"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="JOB No."
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_marginEnd="7dp"
                        android:layout_marginStart="3dp"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/txtbatch"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:textColorHint="#808080"
                        android:background="#F5F5F5"
                        android:hint="@string/jobno"
                        android:textColor="@color/black"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:focusable="false"
                        android:enabled="true"
                        android:textIsSelectable="true"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Prod Qty"
                        android:layout_weight="1.8"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_marginEnd="7dp"
                        android:layout_marginStart="3dp"
                        android:textSize="18dp"
                        />

                    <EditText
                        android:id="@+id/txtqty"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:textColorHint="#808080"
                        android:background="#F5F5F5"
                        android:hint="@string/qty"
                        android:textColor="@color/black"
                        android:layout_weight="1.5"
                        android:singleLine="true"
                        android:layout_marginEnd="10dp"
                        android:inputType="numberDecimal"
                        />
                    <Button
                        android:id="@+id/btn_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#337ab7"
                        android:layout_marginEnd="10dp"
                        android:text="ADD"
                        android:background="@drawable/roundstyle"
                        android:textColor="@color/white"/>


                    <!--                <Button-->
                    <!--                    android:id="@+id/fab"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:backgroundTint="#337ab7"-->
                    <!--                    android:layout_marginEnd="10dp"-->
                    <!--                    android:text="&ndash;&gt;"-->
                    <!--                    android:background="@drawable/roundstyle"-->
                    <!--                    android:textColor="@color/white"/>-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="#E9FA02">
                    <TextView
                        android:id="@+id/txtheading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="OUTPUT"
                        android:layout_weight="0.5"
                        android:textColor="#FA0328"/>

                    <Button
                        android:id="@+id/btn_pull"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#337ab7"
                        android:text="PULL"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/roundstyle"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        />

                    <EditText
                        android:id="@+id/txtselect"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:hint="Select.."
                        android:layout_weight="1.5"
                        android:layout_marginEnd="10dp"
                        android:focusable="false"
                        android:enabled="true"
                        android:textIsSelectable="true"
                        android:visibility="gone"
                        />

                    <EditText
                        android:id="@+id/txtqty2"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textColorHint="#808080"
                        android:background="#F5F5F5"
                        android:hint="@string/qty"
                        android:textColor="@color/black"
                        android:layout_weight="1.5"
                        android:singleLine="true"
                        android:layout_marginEnd="10dp"
                        android:inputType="numberDecimal"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btn_add2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#337ab7"
                        android:text="ADD"
                        android:background="@drawable/roundstyle"
                        android:textColor="@color/white"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_output"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:background="@color/light_blue"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Del"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="0.2"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="3"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Batch"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="0.5"
                        android:layout_marginStart="5dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="0.5"
                        android:textSize="20dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:background="@color/light_blue"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Del"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="0.2"
                        android:textSize="20dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Code"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="0.5"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="2"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="0.5"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="unit"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_weight="0.5"
                        android:textSize="20dp"/>

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:borderWidth="2dp"
        app:backgroundTint="#4cCDDC39"
        android:backgroundTint="#26CDDC39"
        android:src="@drawable/right_arrow" />


</RelativeLayout>
