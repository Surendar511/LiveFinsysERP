<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frm_bar_scanner"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Verify Reels/LOT Store"
        app:titleTextColor="@color/white"
        android:background="#4BB543"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:id="@+id/btns"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:background="#D3D3D3"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="3dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_new"
            android:text="NEW"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#337ab7"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="3dp"
            />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#337ab7"
            android:textColor="@color/white"
            android:layout_marginEnd="3dp"
            android:textStyle="bold"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIST"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#337ab7"
            android:textColor="@color/white"
            android:layout_marginEnd="3dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#337ab7"
            android:textColor="@color/white"
            android:layout_marginEnd="3dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_auto_save_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Data"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#337ab7"
            android:textColor="@color/white"
            android:layout_marginEnd="3dp"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>


    <TextView
        android:layout_below="@id/btn_scanner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:id="@+id/txtscanner"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/latTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude will be here! "
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude will be here! "
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/black"
            android:text="Consider each lot as a reel"
            android:gravity="start"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="3dp"
            android:textSize="18dp"
            />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radio_group1"
            android:layout_weight="1.5"
            >
            <RadioButton android:id="@+id/radio_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y"
                android:layout_marginEnd="23dp"
                android:textStyle="bold"
                />
            <RadioButton android:id="@+id/radio_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N"
                android:textStyle="bold"
                />
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/btn_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Scan Location"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="#4BB543"
            android:gravity="start"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="3dp"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/txt_location"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="#F5F5F5"
            android:editable="false"
            android:textIsSelectable="true"
            android:hint="@string/location"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:focusable="false"
            android:enabled="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/btn_scanner"
            android:textStyle="bold"
            android:text="Scan Reel/LOT"
            android:layout_weight="2"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:background="#4BB543"
            android:gravity="start"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="3dp"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/txt_reels"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="#F5F5F5"
            android:editable="false"
            android:textIsSelectable="true"
            android:hint="@string/selectreel"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:focusable="false"
            android:enabled="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Company Reel No."
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="3dp"
            android:textSize="18dp"
            />


        <EditText
            android:id="@+id/txtcomp_reel_no"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:hint="@string/companyreelno"
            android:textColorHint="#808080"
            android:completionThreshold="1"
            android:background="#F5F5F5"
            android:textColor="@color/black"
            android:inputType="numberDecimal"
            android:layout_marginEnd="5dp"
            android:enabled="false"
            android:focusable="true"
            android:textIsSelectable="true"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="As Per Books Qty"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="3dp"
            android:textSize="18dp"
            />


        <EditText
            android:id="@+id/txtqty2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:hint="@string/qty"
            android:textColorHint="#808080"
            android:completionThreshold="1"
            android:background="#F5F5F5"
            android:textColor="@color/black"
            android:inputType="numberDecimal"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Physical Qty"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="3dp"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/txtqty1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:hint="@string/qty"
            android:textColorHint="#808080"
            android:completionThreshold="1"
            android:background="#F5F5F5"
            android:textColor="@color/black"
            android:inputType="numberDecimal"
            android:layout_marginEnd="5dp"
            android:focusable="true"
            android:enabled="true"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">
        <EditText
            android:id="@+id/txt_barcode"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textColorHint="#808080"
            android:background="#F5F5F5"
            android:hint="Scan Barcode here"
            android:textColor="@color/black"
            android:layout_weight="2"
            />

        <Button
            android:id="@+id/btn_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read code"
            android:textAllCaps="false"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#337ab7"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="3dp"
        android:background="@color/gray_platinum"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Item to List"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#337ab7"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/light_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Del"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="0.2"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="Sr no"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="QR Code"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Qty"
            android:textStyle="bold"
            android:textSize="20dp"/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listItems"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>