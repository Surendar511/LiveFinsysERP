<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:gravity="center">

    <TextView
        android:id="@+id/txtcard_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Item"
        android:width="100dp"
        android:layout_weight="1.2"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtcard_job_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Job No/Dt"
        android:width="50dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1.3"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtcard_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:width="150dp"
        android:layout_weight="0.7"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtcard_stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:width="150dp"
        android:layout_weight="0.7"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtcard_job"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="JOB"
        android:width="150dp"
        android:layout_weight="0.7"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtcard_job_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Qty"
        android:width="150dp"
        android:layout_weight="0.7"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/black"/>
</LinearLayout>